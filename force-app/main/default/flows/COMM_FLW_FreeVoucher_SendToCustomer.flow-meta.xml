    <decisions>
        <name>COMM_Decision_EmailSentSuccessfully</name>
        <label>Email Sent Successfully?</label>
        <locationX>182</locationX>
        <locationY>566</locationY>
        <defaultConnector>
            <targetReference>COMM_EmailFailureScreen</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Failure</defaultConnectorLabel>
        <rules>
            <name>COMM_Outcome_SendSuccess</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>COMM_Action_SendFreeVoucher</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>COMM_Assignment_SendStatus</targetReference>
            </connector>
            <label>Success</label>
        </rules>
    </decisions>
    <description>Screen Flow for User to confirm Voucher sending</description>
    <environments>Default</environments>
    <formulas>
        <description>Formula to obtain the send counter value after this screen ends</description>
        <name>COMM_Formula_NextCounterValue</name>
        <dataType>Number</dataType>
        <expression>{!recordId.COMM_SentCounter__c} + 1</expression>
        <scale>0</scale>
    </formulas>
    <formulas>
        <description>Formula to obtain the next status value for the Free Voucher</description>
        <name>COMM_Formula_StatusUpdateValuie</name>
        <dataType>String</dataType>
        <expression>IF({!recordId.COMM_SentCounter__c} &gt; 1, &quot;Resent&quot;, &quot;Sent&quot;)</expression>
    </formulas>
    <interviewLabel>Free Voucher: Send to Customer {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Free Voucher: Send to Customer</label>
    <processMetadataValues>
