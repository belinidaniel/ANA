        <locationY>674</locationY>
        <assignmentItems>
            <assignToReference>recordId.COMM_SentCounter__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>COMM_Formula_NextCounterValue</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>recordId.COMM_Status__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>COMM_Formula_StatusUpdateValuie</elementReference>
            </value>
