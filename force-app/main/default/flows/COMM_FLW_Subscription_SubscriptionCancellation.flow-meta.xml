    <decisions>
        <description>Confirm if the cancel action can run based on the Case Data</description>
        <name>COMM_Decision_ConfirmActionAvailability</name>
        <label>Confirm Action Availability</label>
        <locationX>182</locationX>
        <locationY>134</locationY>
        <defaultConnector>
            <targetReference>COMM_Screen_SubscriptionCancelNotPermitted</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>COMM_Outcome_Confirmed</name>
            <conditionLogic>((((1 AND ( 2 OR ( 3 OR 4 OR 5 OR 6 ) ) ) AND (7 OR (9 AND 4) )) AND 8) OR 10 OR 11)</conditionLogic>
            <conditions>
                <leftValueReference>recordId.COMM_Status__c</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue>Archieved</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>recordId.COMM_ActiveSubscriptionRequest__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>recordId.COMM_ActiveSubscriptionRequest__r.Status</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Process Concluded</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>recordId.COMM_ActiveSubscriptionRequest__r.Status</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Request Denied</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>recordId.COMM_ActiveSubscriptionRequest__r.Status</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Archived</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>recordId.COMM_ActiveSubscriptionRequest__r.Status</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Expired</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>recordId.COMM_ActiveSubscriptionRequest__r.RecordType.DeveloperName</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue>COMM_CancelationRequest</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>COMM_Formula_CurrentDate</leftValueReference>
                <operator>LessThanOrEqualTo</operator>
                <rightValue>
                    <elementReference>COMM_Formula_CancellationDateLimit</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>recordId.COMM_ActiveSubscriptionRequest__r.RecordType.DeveloperName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>COMM_CancelationRequest</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Profile.Name</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Super Admin</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$UserRole.DeveloperName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>COMM_ANA_Admin</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>COMM_Screen_SubscriptionCancellationWarning</targetReference>
            </connector>
            <label>Confirmed</label>
        </rules>
    </decisions>
    <description>This flow gives the possibility to cancel a subscription in order to efficiently manage the company subscriptions.</description>
