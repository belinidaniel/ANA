    <formulas>
        <description>Cancelation date exact moment</description>
        <name>COMM_Formula_CancelationDate</name>
        <dataType>Date</dataType>
        <expression>TODAY()</expression>
    </formulas>
    <formulas>
        <description>Cancellation action limit date</description>
        <name>COMM_Formula_CancellationDateLimit</name>
        <dataType>Date</dataType>
        <expression>{!recordId.COMM_EndDate__c} - 15</expression>
    </formulas>
    <formulas>
        <name>COMM_Formula_CurrentDate</name>
        <dataType>Date</dataType>
        <expression>TODAY()</expression>
    </formulas>
    <formulas>
        <name>COMM_Formula_Status</name>
        <dataType>String</dataType>
        <expression>IF( OR ( {!$Profile.Name} == &quot;Super Admin&quot;,  {!$UserRole.DeveloperName} == &quot;COMM_ANA_Admin&quot;), &quot;Process Concluded&quot;, &quot;Waiting Approval&quot;)</expression>
    </formulas>
    <formulas>
        <description>Formula to retrieve Subscription&apos;s Airport. If Value Field is empty retrieve airport from Subscription&apos;s Product</description>
        <name>COMM_SubscriptionAirportFormula</name>
        <dataType>String</dataType>
        <expression> IF(ISPICKVAL({!recordId.COMM_AirportValue__c}, &quot;&quot;), TEXT({!recordId.COMM_Product__r.COMM_Airport__c}), TEXT({!recordId.COMM_AirportValue__c}))</expression>
    </formulas>
    <formulas>
        <description>Formula for the Airport Admin Queue Name based on Subscription Location</description>
        <name>COMM_SubscriptionRequestAirportAdminQueueNameFormula</name>
        <dataType>String</dataType>
        <expression>IF(ISBLANK({!COMM_SubscriptionAirportFormula}), &quot;COMM_SubscriptionRequestANAAdmin&quot;, &quot;COMM_SubscriptionRequestAirportAdmin_&quot; + {!COMM_SubscriptionAirportFormula})</expression>
    </formulas>
    <formulas>
        <description>Formula to obtain the Contact Id that the Case will be associated with. Case will be associated with User&apos;s Contact, if he doesn&apos;t have one then assign it to Subscription&apos;s Contact.</description>
        <name>COMM_Variable_ContactId</name>
        <dataType>String</dataType>
        <expression>IF(ISNULL({!$User.ContactId}), {!recordId.COMM_Contact__c}, {!$User.ContactId})</expression>
    </formulas>
