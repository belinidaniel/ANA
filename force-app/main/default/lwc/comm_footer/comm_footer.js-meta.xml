<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Footer</masterLabel>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property name="mainLogo" label="First Logo image " description="Select the logo image" filter="cms_image" type="ContentReference" />
            <property name="secondLogo" label="Second Logo image" description="Select the logo image" filter="cms_image" type="ContentReference" />
            <property name="logoLink" label="Logo Image Link" type="String"/>
            <property name="firstSectionTitle" label="Frist Section Title" type="String" translatable="true" />
            <property name="secondSectionTitle" label="Second Section Title" type="String" translatable="true" />

            <!-- first section links -->
            <property name="firstSectionLink1Label" label="First Section Label 1" type="String" translatable="true" />
            <property name="firstSectionLink1Url" label="First Section Link URL 1" type="String" />
            <property name="firstSectionLink2Label" label="First Section Label 2" type="String" translatable="true" />
            <property name="firstSectionLink2Url" label="First Section Link URL 2" type="String" />
            <property name="firstSectionLink3Label" label="First Section Label 3" type="String" translatable="true" />
            <property name="firstSectionLink3Url" label="First Section Link URL 3" type="String" />
            
            <!-- Second section links -->
            <property name="secondSectionLink1Label" label="Second Section Label 1" type="String" translatable="true" />
            <property name="secondSectionLink1Url" label="Second Section Link URL 1" type="String" /> 
            <property name="secondSectionLink2Label" label="Second Section Label 2" type="String" translatable="true" />
            <property name="secondSectionLink2Url" label="Second Section Link URL 2" type="String" />
            <property name="secondSectionLink3Label" label="Second Section Label 3" type="String" translatable="true" />
            <property name="secondSectionLink3Url" label="Second Section Link URL 3" type="String" />

            <!-- Copyright section -->
            <property name="copyright" label="Copyright Label" type="String" translatable="true" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>