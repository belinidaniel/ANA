<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Login</masterLabel>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property
                name="pageIllustration"
                label="Page Illustration"
                description="Select page illustration"
                filter="cms_image"
                type="ContentReference"
            />
            <property
                name="loginWithAD"
                label="Subscription Portal Login (Azure AD)"
                description="Select if login form is the Subscription Portal Form with only Azure AD as an option"
                type="Boolean"
            />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>