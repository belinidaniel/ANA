<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Login Site</masterLabel>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property
                name="pageIllustration"
                label="Page Illustration"
                description="Select page illustration"
                filter="cms_image"
                type="ContentReference"
            />
            <property
                name="siteType"
                label="Site Type"
                description="Select what Site the Login is designed for"
                type="String"
                datasource="Customer Portal,Subscription Portal"
            />
            <property
                name="subscriptionLink"
                label="Subscription Link"
                description="Link called when selecting Subscription Access Button"
                type="String"
            />
            <property name="buttonLink" label="Button link for Login with reservation number" type="String" />
			<property name="subscriptionPageLink" label="Button link for Subscription Access" type="String" />

        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>