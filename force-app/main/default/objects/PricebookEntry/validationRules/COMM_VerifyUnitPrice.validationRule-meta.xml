<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>COMM_VerifyUnitPrice</fullName>
    <active>true</active>
    <description>Validates if the Unit Price is not negative</description>
    <errorConditionFormula>AND(
    NOT(ISPICKVAL(Product2.Family, &quot;Parking&quot;)),
    UnitPrice &lt; 0
)</errorConditionFormula>
    <errorMessage>The unit price cannot be negative</errorMessage>
</ValidationRule>
