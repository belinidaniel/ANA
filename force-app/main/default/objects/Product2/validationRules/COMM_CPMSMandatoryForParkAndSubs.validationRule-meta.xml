<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>COMM_CPMSMandatoryForParkAndSubs</fullName>
    <active>true</active>
    <description>CPMS provider is mandatory for Parking and Subscriptions.</description>
    <errorConditionFormula>AND(
OR(ISPICKVAL(Family, &apos;Subscription&apos;),
ISPICKVAL(Family, &apos;Park&apos;)),
ISPICKVAL(COMM_CPMS__c, &apos;&apos;))</errorConditionFormula>
    <errorDisplayField>COMM_CPMS__c</errorDisplayField>
    <errorMessage>Please fill the Parking System used</errorMessage>
</ValidationRule>
